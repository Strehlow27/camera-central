---
import BaseLayout from "../layouts/BaseLayout.astro";
import FindFlow from "../components/FindFlow.astro";
---

<BaseLayout
  title="Find My Camera – Camera Central"
  description="Answer a few quick questions to get a personalized camera recommendation for your exact needs!"
  tight
>
  <div class="pt-4">
    {/* One shared container controls width for BOTH header + card */}
    <div class="w-full max-w-2xl mx-auto space-y-6">
      <header class="text-center">
        <h1 class="text-4xl font-semibold tracking-tight">Find my camera</h1>
        <p class="mt-2 text-gray-600 leading-relaxed">
          Answer a few questions and Camera Central will recommend 1–3 cameras for your needs!
        </p>
      </header>

      <FindFlow />
    </div>
  </div>
</BaseLayout>