---
import BaseLayout from "../layouts/BaseLayout.astro";
import FindFlow from "../components/FindFlow.astro";
---

<BaseLayout
  tight={true}
  title="Find My Camera – Camera Central"
  description="Answer a few quick questions and Camera Central will recommend 1–3 cameras that fit how you actually shoot."
>
  {/* Reduced top padding */}
  <div class="pt-0 sm:pt-1">
    {/* One shared container controls width for BOTH header + card */}
    <div class="w-full max-w-2xl mx-auto space-y-4">
      <header class="text-center">
        <h1 class="text-4xl font-semibold tracking-tight">
          Find my camera
        </h1>

        {/* Tighter spacing + slightly longer sentence */}
        <p class="mt-1 text-gray-600 leading-relaxed">
          Answer a few quick questions and Camera Central will recommend 1–3 cameras that fit how you actually shoot.
        </p>
      </header>

      <FindFlow />
    </div>
  </div>
</BaseLayout>