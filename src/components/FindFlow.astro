<div
  class="w-full max-w-2xl mx-auto rounded-2xl bg-white border border-gray-200 shadow-sm
       p-5 sm:p-8 min-h-[360px] sm:min-h-[420px] flex flex-col"
>
  <div id="flow" class="flex-1 flex flex-col">
    <div class="space-y-1">
      <div class="flex items-center justify-between">
        <p class="text-sm text-gray-500" id="progress">Question 1 of 8</p>
        <p class="text-sm text-gray-500" id="percent">14%</p>
      </div>

      <!-- Progress bar -->
      <div
        class="h-2 w-full rounded-full bg-gray-100 overflow-hidden"
        role="progressbar"
        aria-label="Progress"
        aria-valuemin="0"
        aria-valuemax="100"
      >
        <div
          id="bar"
          class="h-full bg-black rounded-full transition-all duration-300"
          style="width: 0%"
        ></div>
      </div>

      <h2 class="text-2xl font-semibold" id="question">Loading...</h2>
      <p class="text-gray-600" id="helper"></p>
    </div>

    <!-- ✅ grid + gap ensures consistent spacing; mb-3 gives a consistent gap above buttons -->
    <div id="options" class="grid gap-3 mb-3"></div>

    <div class="flex items-center justify-between">
      <button
        id="backBtn"
        class="min-w-[96px] px-4 py-2.5 rounded-xl border border-gray-300 bg-white hover:bg-gray-50 transition cursor-pointer
               disabled:opacity-40 disabled:cursor-not-allowed
               focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-gray-300
               active:scale-[0.98]"
        disabled
      >
        Back
      </button>

      <button
        id="nextBtn"
        class="min-w-[140px] px-5 py-2.5 rounded-xl bg-black text-white hover:bg-gray-900 transition cursor-pointer
               disabled:opacity-40 disabled:cursor-not-allowed shadow-sm
               focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-gray-400
               active:scale-[0.98]"
        disabled
      >
        Next
      </button>
    </div>
  </div>
</div>

<script is:inline>
  (function () {
    function initFindFlow() {
      const flowRoot = document.getElementById("flow");
      if (!flowRoot) return;
      if (flowRoot.dataset.ccInit === "1") return;
      flowRoot.dataset.ccInit = "1";

      function track(name, props) {
        try {
          if (typeof window.ccTrack === "function") window.ccTrack(name, props || {});
        } catch {}
      }

      const questions = [
        {
          id: "genre",
          q: "What do you shoot most when you travel?",
          helper: "Pick what you care about most. You can refine later.",
          options: ["Landscapes", "City/Street", "People", "A mix of everything"],
        },
        {
          id: "primary",
          q: "What’s your primary use?",
          helper: "This helps prioritize photo resolution vs video features.",
          options: ["Photography", "Videography", "Both"],
        },

        // ✅ NEW: Brand preference (4-box limit friendly)
        {
          id: "brandGate",
          q: "Do you have a brand preference?",
          helper: "If you’re loyal to a brand, we can prioritize cameras that match.",
          options: ["No preference", "Canon", "Sony", "Nikon or Fujifilm"],
        },

        // ✅ NEW: Only shown if they choose “Nikon or Fujifilm”
        {
          id: "brandOther",
          q: "Which brand do you prefer?",
          helper: "Pick the one you’re most interested in.",
          options: ["Nikon", "Fujifilm"],
        },

        {
          id: "cameraType",
          q: "What type of camera are you looking for?",
          helper: "Fixed-lens is simpler. Detachable-lens is more flexible and upgradeable.",
          options: [
            "Detachable-lens camera",
            "Fixed-lens digital camera",
            "Not sure / show me both",
          ],
        },
        {
          id: "budget",
          q: "What’s your camera body budget?",
          helper: "Just the camera body, not lenses.",
          options: ["Under $1,000", "$1,000–$1,800", "$1,800–$2,800", "$2,800+"],
        },
        {
          id: "weight",
          q: "How important is portability?",
          helper: "If you hike or carry it all day, this matters a lot.",
          options: ["Must be light", "Nice to be light", "Not important"],
        },
        {
          id: "lowlight",
          q: "Do you often shoot sunrise/sunset or low light?",
          helper: "This affects sensor and stabilization priorities.",
          options: ["Often", "Sometimes", "Rarely"],
        },
        {
          id: "experience",
          q: "What’s your experience level?",
          helper: "This changes how much complexity you’ll actually enjoy.",
          options: ["Beginner", "Hobbyist", "Advanced"],
        },
        {
          id: "upgrade",
          q: "Are you upgrading from something?",
          helper: "This helps avoid recommending upgrades you won’t notice.",
          options: ["Phone only", "Older DSLR", "Older mirrorless", "Not sure"],
        },
      ];

      const SESSION_KEY = "cameraCentralAnswers";
      const LS_KEY = "cc_answers";
      const LS_META_KEY = "cc_answers_meta";

      let idx = 0;
      const answers = {};

      track("find_view", { questionCount: questions.length });

      const saved = sessionStorage.getItem(SESSION_KEY);
      if (saved) {
        try {
          const parsed = JSON.parse(saved);
          if (parsed && typeof parsed === "object") {
            Object.assign(answers, parsed);
            const firstUnanswered = questions.findIndex(
              (q) => shouldShowQuestion(q.id) && !answers[q.id]
            );
            idx = firstUnanswered === -1 ? questions.length - 1 : firstUnanswered;
            track("find_resume", { answeredCount: Object.keys(answers).length, resumeIndex: idx });
          }
        } catch {}
      }

      // ✅ make option height consistent so spacers reserve exactly 1 option slot
      const optionBase =
        "w-full min-h-[56px] text-left px-4 py-3 rounded-xl border transition cursor-pointer " +
        "focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-gray-300";

      const optionUnselected =
        "border-gray-200 bg-white hover:border-gray-300 hover:bg-gray-50 active:scale-[0.99]";

      const optionSelected = "border-gray-900 bg-gray-50";

      const progress = document.getElementById("progress");
      const percentEl = document.getElementById("percent");
      const bar = document.getElementById("bar");

      const question = document.getElementById("question");
      const helper = document.getElementById("helper");
      const optionsWrap = document.getElementById("options");
      const backBtn = document.getElementById("backBtn");
      const nextBtn = document.getElementById("nextBtn");

      if (!progress || !percentEl || !bar || !question || !helper || !optionsWrap || !backBtn || !nextBtn) {
        console.warn("[FindFlow] Missing expected DOM elements. Quiz script not started.");
        return;
      }

      let hasStarted = false;
      let lastQuestionId = null;

      function updateProgressUI() {
        const pct = Math.round(((idx + 1) / questions.length) * 100);
        bar.style.width = `${pct}%`;
        percentEl.textContent = `${pct}%`;
        const pb = bar.parentElement;
        if (pb) pb.setAttribute("aria-valuenow", String(pct));
      }

      function saveProgress() {
        try { sessionStorage.setItem(SESSION_KEY, JSON.stringify(answers)); } catch {}
      }

      function shouldShowQuestion(qid) {
        // Only show brandOther if they picked “Nikon or Fujifilm”
        if (qid === "brandOther") return answers.brandGate === "Nikon or Fujifilm";
        return true;
      }

      function finalizeAndGoToResults() {
        // ✅ Normalize brand answer into ONE field (answers.brand)
        // brandGate: No preference / Canon / Sony / Nikon or Fujifilm
        // brandOther: Nikon / Fujifilm (only if needed)
        if (answers.brandGate === "Nikon or Fujifilm") {
          // Use the follow-up choice if present
          answers.brand = answers.brandOther || "Nikon";
        } else if (answers.brandGate) {
          answers.brand = answers.brandGate;
        } else {
          answers.brand = "No preference";
        }
        
        delete answers.brandGate;
        delete answers.brandOther;

        try {
          localStorage.setItem(LS_KEY, JSON.stringify(answers));
          localStorage.setItem(LS_META_KEY, JSON.stringify({ version: 1, updatedAt: Date.now() }));
        } catch {}
        try { sessionStorage.removeItem(SESSION_KEY); } catch {}

        track("find_complete", {
          questionCount: questions.length,
          answeredCount: Object.keys(answers).length,
          answers,
        });

        window.location.href = "/results";
      }

      function makeSpacer() {
        const d = document.createElement("div");
        d.className = "w-full min-h-[56px] px-4 py-3 rounded-xl border border-transparent";
        d.setAttribute("aria-hidden", "true");
        return d;
      }

      function render() {
        let q = questions[idx];

        // ✅ If this question shouldn’t be shown, automatically move forward/backward
        if (!shouldShowQuestion(q.id)) {
          // If it’s hidden, and we somehow landed here, skip it.
          // Prefer moving forward unless we’re at the end.
          if (idx < questions.length - 1) idx++;
          else if (idx > 0) idx--;
          q = questions[idx];
        }

        progress.textContent = `Question ${idx + 1} of ${questions.length}`;
        question.textContent = q.q;
        helper.textContent = q.helper || "";

        updateProgressUI();

        if (q.id !== lastQuestionId) {
          lastQuestionId = q.id;
          track("find_question_view", { index: idx, id: q.id });
        }

        optionsWrap.innerHTML = "";
        const selected = answers[q.id];

        // render options
        q.options.forEach((opt) => {
          const btn = document.createElement("button");
          btn.type = "button";

          btn.innerHTML = `
            <span class="flex items-center justify-between">
              <span>${opt}</span>
              <span class="text-sm text-gray-500 w-4 text-right">${selected === opt ? "✓" : ""}</span>
            </span>
          `;

          btn.className = optionBase + " " + (selected === opt ? optionSelected : optionUnselected);

          btn.addEventListener("click", () => {
            if (!hasStarted) {
              hasStarted = true;
              track("find_start", { firstQuestionId: q.id });
            }

            answers[q.id] = opt;
            saveProgress();

            track("find_answer_select", { questionId: q.id, value: opt, index: idx });

            nextBtn.disabled = false;
            render();
          });

          optionsWrap.appendChild(btn);
        });

        // ✅ always reserve 4 slots total (so 3-option questions create exactly 1 option-height gap)
        const TARGET = 4;
        const missing = Math.max(0, TARGET - q.options.length);
        for (let i = 0; i < missing; i++) {
          optionsWrap.appendChild(makeSpacer());
        }

        backBtn.disabled = idx === 0;
        nextBtn.textContent = idx === questions.length - 1 ? "Show my recommendation" : "Next";
        nextBtn.disabled = !answers[q.id];
      }

      backBtn.addEventListener("click", () => {
        track("find_back", { fromIndex: idx });

        if (idx <= 0) return;

        do {
          idx--;
        } while (idx > 0 && !shouldShowQuestion(questions[idx].id));

        render();
      });

      nextBtn.addEventListener("click", () => {
        track("find_next", { fromIndex: idx });

        if (idx < questions.length - 1) {
          do {
            idx++;
          } while (idx < questions.length - 1 && !shouldShowQuestion(questions[idx].id));

          render();
        } else {
          finalizeAndGoToResults();
        }
      });

      render();
    }

    function boot() {
      try { initFindFlow(); } catch (e) { console.error("[FindFlow] init error", e); }
    }

    if (document.readyState === "loading") {
      document.addEventListener("DOMContentLoaded", boot, { once: true });
    } else {
      boot();
    }

    document.addEventListener("astro:page-load", boot);
    document.addEventListener("astro:after-swap", boot);
  })();
</script>